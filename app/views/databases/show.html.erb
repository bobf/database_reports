<%= turbo_frame_tag :main do %>
  <%= turbo_flash_messages %>
  <table class="database table-auto">
    <tbody>
      <tr>
        <th class="px-4 py-2 text-left">Name</th>
        <td class="px-4 py-2"><%= @database.name %></td>
      </tr>

      <tr>
        <th class="px-4 py-2 text-left">Adapter</th>
        <td class="px-4 py-2"><%= @database.adapter(humanize: true) %></td>
      </tr>

      <tr>
        <th class="px-4 py-2 text-left">Username</th>
        <td class="px-4 py-2 font-mono"><%= @database.username %></td>
      </tr>

      <tr>
        <th class="px-4 py-2 text-left">Host</th>
        <td class="px-4 py-2 font-mono"><%= @database.host %>:<%= @database.port %></td>
      </tr>

      <tr>
        <th class="px-4 py-2 text-left">Database</th>
        <td class="px-4 py-2 font-mono"><%= @database.database %></td>
      </tr>

      <tr>
        <th class="px-4 py-2 text-left">Description</th>
        <td class="px-4 py-2"><%= @database.description %></td>
      </tr>
    </tbody>
  </table>

  <div class="container px-2 py-3">
    <%= button 'Configure Database', edit_database_path(@database), color: 'yellow', classes: %w[mt-3] %>
    <%= button 'Delete Database', database_path(@database), method: :delete, confirm: 'Are you sure?', color: 'red' %>
  </div>
<% end %>
