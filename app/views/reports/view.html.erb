<%= turbo_frame_tag :main do %>
  <%= turbo_flash_messages %>
  <% if @error.present? %>
    <%= render partial: 'shared/error', locals: { report_url: report_path(@report) } %>
  <% else %>
    <%= render partial: 'shared/report', locals: { report_url: report_path(@report), max_rows: nil, max_columns: nil } %>
  <% end %>
<% end %>
