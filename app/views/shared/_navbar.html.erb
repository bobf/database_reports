<nav class="flex items-center justify-between flex-wrap bg-purple-500 p-6">
  <div class="flex items-center flex-shrink-0 text-white mr-6">
    <img src="/database.svg" class="w-8 mr-4" />
    <span class="font-semibold text-xl tracking-tight">Database Reports</span>
  </div>
  <div class="block lg:hidden">
    <button class="flex items-center px-3 py-2 border rounded text-purple-200 border-purple-400 hover:text-white hover:border-white">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
    <div class="text-sm lg:flex-grow">
      <% if current_user.present? %>
        <%= link_to 'New Report', new_report_path, class: 'block mt-4 lg:inline-block lg:mt-0 text-purple-200 hover:text-white mr-4' %>
        <%= link_to 'List Reports', reports_path, class: 'block mt-4 lg:inline-block lg:mt-0 text-purple-200 hover:text-white mr-4' %>
        <%= link_to 'Account Settings', edit_user_registration_path, class: 'block mt-4 lg:inline-block lg:mt-0 text-purple-200 hover:text-white mr-4' %>
        <% if current_user.admin? %>
          <%= link_to 'Users', users_path, class: 'block mt-4 lg:inline-block lg:mt-0 text-purple-200 hover:text-white mr-4' %>
        <% end %>
        <%= link_to 'Sign Out', destroy_user_session_path, class: 'block mt-4 lg:inline-block lg:mt-0 text-purple-200 hover:text-white mr-4' %>
      <% end %>
    </div>
  </div>
  <% if flash[:notice].present? %>
    <div class="flash notice float-right px-3 py-3 bg-blue-800 rounded-md animate-fade-out"><%= flash[:notice].html_safe %></div>
    <% flash[:notice] = nil %>
  <% end %>

  <% if flash[:alert].present? %>
    <div class="flash alert float-right px-3 py-3 bg-red-500 rounded-md animate-fade-out"><%= flash[:alert].html_safe %></div>
    <% flash[:alert] = nil %>
  <% end %>
</nav>
