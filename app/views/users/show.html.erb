<%= turbo_frame_tag :users do %>
  <table class="user">
    <tbody>
      <tr>
        <th>Username</th>
        <td><%= @user.email %></td>
      </tr>

      <tr>
        <th>Created At</th>
        <td><%= @user.created_at.strftime('%Y-%m-%d %H:%M:%S UTC') %></td>
      </tr>

      <tr>
        <th>Admin</th>
        <td><%= @user.admin? ? 'Yes' : 'No' %></td>
      </tr>
    </tbody>
  </table>

  <div class="container px-2 py-3">
    <%= link_to 'Edit User', edit_user_path(@user), class: 'bg-yellow-600 hover:bg-blue-700 mr-2 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Delete User', user_path(@user), data: { 'turbo_method': :delete, turbo_confirm: 'Are you sure?' }, class: 'bg-red-600 hover:bg-blue-700 mr-2 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
